<!DOCTYPE html>
<html lang="en">

<head>
    <title>Account Profile</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f5f5f5;
            font-family: 'Arial', sans-serif;
        }
        
        .profile-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.15);
            margin: 1em auto;
            padding: 2em;
            max-width: 600px;
        }
        
        .profile-card h2 {
            font-size: 1.8em;
            margin-bottom: 1em;
            text-align: center;
            color: #333;
        }
        
        .profile-card p {
            font-size: 1em;
            color: #666;
            text-align: left;
            line-height: 1.6;
            display: flex;
            justify-content: space-between;
        }
        
        .badge-payment {
            font-size: 0.9em;
            border-radius: 5px;
        }
        
        .buttons {
            display: flex;
            justify-content: center;
            gap: 1em;
            margin-top: 2em;
        }
    </style>
</head>

<body>
    <div class="container py-5">
        <% data.forEach(function(data) { %>
            <div class="profile-card">
                <form action="/updateprofile" method="post">
                    <h2>
                        Full Name: <input type="text" name="Fullname" value="<%= data.Fullname %>">
                    </h2>
                    <p>
                        <strong>Email:</strong>
                        <input type="email" name="Email" value="<%= data.Email %>">
                    </p>
                    <p>
                        <strong>Username:</strong>
                        <input type="text" name="Username" value="<%= data.Username %>">
                    </p>
                    <p>
                        <strong>DOB:</strong>
                        <input type="date" name="DOB" value="<%= data.DOB %>">
                    </p>
                    <p>
                        <strong>NomorPeserta:</strong>
                        <input type="text" name="NomorPeserta" value="<%= data.NomorPeserta %>">
                    </p>
                    <p>
                        <strong>NIP:</strong>
                        <input type="text" name="NIP" value="<%= data.NIP %>">
                    </p>
                    <p>
                        <strong>Fakultas:</strong>
                        <input type="text" name="Fakultas" value="<%= data.Fakultas %>">
                    </p>
                    <p>
                        <strong>Payment:</strong>
                        <input type="text" name="Payment" value="<%= data.Payment %>">
                    </p>
                    <input type="hidden" name="UserID" value="<%= data.UserID %>">
                    <input type="submit" value="Update">
                </form>

            </div>
            <% }); %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>