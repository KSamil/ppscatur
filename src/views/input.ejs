<!DOCTYPE html>
<html lang="en">

<head>
    <title>Account Profile</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f5f5f5;
            font-family: 'Arial', sans-serif;
        }
        
        .profile-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.15);
            margin: 1em auto;
            padding: 2em;
            max-width: 600px;
        }
        
        .profile-card h2 {
            font-size: 1.8em;
            margin-bottom: 1em;
            text-align: center;
            color: #333;
        }
        
        .profile-card .form-group {
            margin-bottom: 1em;
        }
    </style>
</head>

<body>
    <div class="container py-5">
        <div class="profile-card">
            <form id="form1" action="/profile" method="POST">
                <fieldset>
                    <legend>User Information</legend>
                    <!-- UserID -->
                    <div class="form-group">
                        <label for="UserID">User ID:</label>
                        <input type="number" id="UserID" name="UserID" class="form-control" readonly>
                    </div>
                    <!-- Fullname -->
                    <div class="form-group">
                        <label for="Fullname">Fullname</label>
                        <input type="text" id="Fullname" name="Fullname" class="form-control">
                    </div>
                    <!-- Username -->
                    <div class="form-group">
                        <label for="Username">Username</label>
                        <input type="text" id="Username" name="Username" class="form-control">
                    </div>
                    <!-- Email -->
                    <div class="form-group">
                        <label for="Email">Email:</label>
                        <input type="email" id="Email" name="Email" class="form-control">
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Personal Details</legend>
                    <!-- DOB -->
                    <div class="form-group">
                        <label for="DOB">Date of Birth:</label>
                        <input type="date" id="DOB" name="DOB" class="form-control">
                    </div>
                    <!-- IDCard -->
                    <input type="hidden" id="IDCard" name="IDCard" value="0">
                </fieldset>
                <!-- Float with Radiobox -->
                <input type="hidden" id="Sess" name="Sess" value="0">
                <!-- NomorPeserta -->
                <div class="form-group">
                    <label for="NomorPeserta">Nomor Peserta:</label>
                    <input type="number" id="NomorPeserta" name="NomorPeserta" class="form-control">
                </div>
                <!-- NIP -->
                <div class="form-group">
                    <label for="NIP">NIP:</label>
                    <input type="number" id="NIP" name="NIP" class="form-control">
                </div>
                <!-- Payment Status -->
                <div class="form-group">
                    <label for="Payment">Payment Status:</label>
                    <select id="Payment" name="Payment" class="form-control">
                        <option value="0">Belum Dibayar</option>
                        <option value="1">Sudah Dibayar</option>
                    </select>
                </div>
                <!-- Fakultas Dropdown -->
                <div class="form-group">
                    <label for="Fakultas">Fakultas:</label>
                    <select id="Fakultas" name="fakultas" class="form-control">
                        <option value="1">FTSPK</option>
                        <option value="2">FTEIC</option>
                        <option value="3">FTIRS</option>
                        <option value="4">FTK</option>
                        <option value="5">FV</option>
                        <option value="6">FDBD</option>
                        <option value="7">F</option>
                    </select>
                </div>
                <input type="button" onclick="myFunction()" value="Submit" class="btn btn-primary">
            </form>
        </div>
    </div>
    <script>
        function myFunction() {
            document.getElementById("form1").submit();
        }
        let lastUserId = 15;

        function incrementUserId() {
            lastUserId += 1;
            document.getElementById('UserID').value = lastUserId;
        }

        window.onload = incrementUserId;
    </script>
</body>

</html>