<!DOCTYPE html>
<html lang="en">

<head>
    <title>Account Profile</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f5f5f5;
            font-family: 'Arial', sans-serif;
        }
        
        .profile-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.15);
            margin: 1em auto;
            padding: 2em;
            max-width: 600px;
        }
        
        .profile-card h2 {
            font-size: 1.8em;
            margin-bottom: 1em;
            text-align: center;
            color: #333;
        }
        
        .profile-card p {
            font-size: 1em;
            color: #666;
            text-align: left;
            line-height: 1.6;
            display: flex;
            justify-content: space-between;
        }
        
        .badge-payment {
            font-size: 0.9em;
            border-radius: 5px;
        }
        
        .buttons {
            display: flex;
            justify-content: center;
            gap: 1em;
            margin-top: 2em;
        }
    </style>
</head>

<body>
    <div class="container py-5">
        <div class="buttons">
            <a href="/" class="btn btn-primary">Back to Menu</a>
            <a href="/editprofile" class="btn btn-primary">Edit</a>
            <a href="/helpform" class="btn btn-secondary">Help</a>
        </div>
        <% data.forEach(function(data) { %>
            <div class="profile-card">
                <h2>
                    <%= data.Fullname %>
                </h2>
                <p>
                    <strong>Email:</strong>
                    <span>
                        <%= data.Email %>
                    </span>
                </p>
                <p>
                    <strong>Username:</strong>
                    <span>
                        <%= data.Username %>
                    </span>
                </p>
                <p>
                    <strong>DOB:</strong>
                    <span>
                        <%= data.DOB %>
                    </span>
                </p>
                <p>
                    <strong>NomorPeserta:</strong>
                    <span>
                        <%= data.NomorPeserta %>
                    </span>
                </p>
                <p>
                    <strong>NIP:</strong>
                    <span>
                        <%= data.NIP %>
                    </span>
                </p>
                <p>
                    <strong>Fakultas:</strong>
                    <span>
                        <%= ["FTSPK", "FTEIC", "FTIRS", "FTK", "FV", "FDBD", "F"][data.Fakultas - 1] %>
                    </span>
                </p>
                <p>
                    <strong>Payment:</strong>
                    <span class="badge-payment <%= data.Payment == 1 ? 'bg-success' : 'bg-danger' %> p-2 text-white">
                        <%= data.Payment == 1 ? 'Sudah dibayar' : 'Belum dibayar' %>
                    </span>
                </p>
            </div>
            <% }); %>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>